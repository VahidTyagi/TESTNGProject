<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Jenkins CI Suite" verbose="1" parallel="classes" thread-count="3">

	<!-- Parameters for environment -->
	<parameter name="env" value="qa"/>
	<parameter name="url" value="https://qa.yourapp.com"/>

	<!-- Run all tests inside package -->
	<test name="Full Regression">
		<packages>
			<package name="com.demo.tests"/>
		</packages>
	</test>

</suite>
